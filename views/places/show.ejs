<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 mb-3">
            <div class="card">
                <img src="<%= place.image%>" class="card-img-top" alt="place's image">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=place.title%>
                    </h5>
                    <p class="card-text text-muted">
                        <%= place.location%>
                    </p>
                    <p class="card-text">
                        <%= place.description %>
                    </p>
                </div>
                <div class="card-body">

                    <% for (let tag of place.tags) { %>
                        <span class="rounded bg-light mx-1">
                            <span class="text-success">&#10003;</span>
                            <span>
                                <%=tag %>
                            </span>
                        </span>
                        <% } %>
                </div>
                <div class="card-body">
                    <form action="/places/<%= place._id %>/edit" method="GET" class="d-inline mb-3">

                        <button class="btn btn-warning">Edit</button>
                    </form>
                    <form action="/places" class="d-inline">
                        <button class="btn btn-info">View All</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="createReview mb-3">
                <h2 class="text-center">Leave a Review</h2>
                <form action="/places/<%= place._id%>/reviews" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating:</label>
                        <input type="range" max="5" min="1" id="rating" name="review[rating]" class="form-range"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please give a Rating.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="text" class="form-label">Review:</label>
                        <textarea name="review[text]" id="text" cols="5" rows="5" class="form-control"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please give a review.
                        </div>
                    </div>
                    <button class="btn btn-primary">Post</button>
                </form>
            </div>
            <div class="reviews">
                <h2 class="text-center">Reviews</h1>
                    <% for (let review of place.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-header">
                                username
                            </div>
                            <div class="card-body">
                                <div class="card-subtitle text-muted">
                                    <p>
                                        <%= review.rating %>
                                    </p>
                                </div>
                                <p class="card-text">
                                    <%= review.text %>
                                </p>
                                <form action="/places/<%=place.id%>/reviews/<%=review.id%>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>