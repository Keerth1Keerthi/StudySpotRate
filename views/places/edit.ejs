<% layout('layouts/boilerplate') %>
    <h1>Edit <%= place.title %>
    </h1>
    <form action="/places/<%=place._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" name="place[title]" id="title" value="<%=place.title%>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="location" name="place[location]" id="location" value="<%=place.location%>">
        </div>
        <div>
            <div>
                <label for="tags">Additional Descriptors</label>
            </div>
            <!-- change additional descriptors to checkboxes -->
            <select name="place[tags]" id="tags" multiple>
                <option value="quiet">quiet</option>
                <option value="pretty view">pretty view</option>
                <option value="has computers">has computers</option>
                <option value="clean">clean</option>
                <option value="empty">empty</option>
            </select>
        </div>
        <button>Submit</button>
        <a href="/places/<%= place._id %>">Cancel</a>
    </form>
    <form action="/places/<%=place._id%>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>